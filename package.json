{
  "name": "llm-gateway",
  "version": "1.0.0",
  "description": "Open-source, self-hosted intelligent LLM Gateway providing unified interface for OpenAI and Google Gemini APIs",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "babel src -d dist",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:providers": "jest tests/integration/providers",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "llm",
    "gateway",
    "openai",
    "gemini",
    "api",
    "proxy",
    "self-hosted"
  ],
  "author": "LLM Gateway Contributors",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-alpha.7",
    "node-cache": "^5.1.2",
    "redis": "^4.6.8",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/llm-gateway.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/llm-gateway/issues"
  },
  "homepage": "https://github.com/your-org/llm-gateway#readme",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  }
}
